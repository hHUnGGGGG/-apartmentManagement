<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<AnchorPane prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.DangNhapVaDangKi.LoginController">
    <children>
        <Label layoutX="20.0" layoutY="99.0" text="Welcome back Admin!" textFill="#368981">
            <font>
                <Font name="Tahoma Bold" size="17.0" />
            </font>
        </Label>
        <TextField fx:id="username" layoutX="40.0" layoutY="144.0" prefHeight="30.0" prefWidth="220.0" promptText="Số Điện Thoại" styleClass="textfield" stylesheets="@loginDesign.css" />
      <TextField fx:id="passwordshow" layoutX="40.0" layoutY="185.0" prefHeight="30.0" prefWidth="220.0" promptText="Mật Khẩu" styleClass="textfield" stylesheets="@loginDesign.css" />
        <PasswordField fx:id="passwordhide" layoutX="40.0" layoutY="185.0" prefHeight="30.0" prefWidth="220.0" promptText="Mật Khẩu" styleClass="textfield" stylesheets="@loginDesign.css" />
        <CheckBox fx:id="showPasswordCheckbox" layoutX="40.0" layoutY="327.0" onAction="#togglePasswordVisibility" text="Hiển thị mật khẩu" />
        <Button fx:id="loginBtn" layoutX="40.0" layoutY="229.0" mnemonicParsing="false" onAction="#Login" prefHeight="40.0" prefWidth="220.0" styleClass="login-btn" stylesheets="@loginDesign.css" text="Đăng Nhập" />
        <Button fx:id="closeBtn" layoutX="248.0" layoutY="14.0" mnemonicParsing="false" onAction="#Close" prefHeight="24.0" prefWidth="58.0" styleClass="close" stylesheets="@loginDesign.css" AnchorPane.rightAnchor="2.0" AnchorPane.topAnchor="2.0">
            <graphic>
                <FontAwesomeIcon glyphName="CLOSE" size="1.2em" />
            </graphic>
        </Button>
      <Button fx:id="dangKyBtn" layoutX="40.0" layoutY="276.0" mnemonicParsing="false" onAction="#ChuyenSangDangKy" prefHeight="40.0" prefWidth="220.0" styleClass="login-btn" stylesheets="@loginDesign.css" text="Đăng Ký" />
    </children>
</AnchorPane>
